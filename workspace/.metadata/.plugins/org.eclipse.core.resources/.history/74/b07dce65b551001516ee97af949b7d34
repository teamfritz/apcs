 * TODO: comment this program
 */

import stanford.karel.*;

public class Sorter extends SuperKarel {
	int test = 1;
	public void run() {
		while (beepersPresent())
			move();
		turnAround();
		move();
		turnRight();
		pickupRow();
		putBeeper();
		while (test == 1) {
			turnRight();
			move();
			turnRight();
			pickupRow();
			turnRight();
			if (frontIsBlocked())
				test=0;
			turnLeft();
		}
		
	}
	
	public void pickupRow() {
		while (frontIsClear()) {
			if (beepersPresent())
				pickBeeper();
			move();
		}
		turnAround();
		moveWall();
	}
	
	public void moveWall() {
		while (frontIsClear())
			move();
	}
	
	public void moveBeeper() {
		while (noBeepersPresent())
			move();
	}
}