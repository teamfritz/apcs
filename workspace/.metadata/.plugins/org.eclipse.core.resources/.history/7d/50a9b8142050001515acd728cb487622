import org.omg.CORBA.PUBLIC_MEMBER;

import stanford.karel.*;

public class Mazefinder extends SuperKarel {
	int placeBeeper = 1;
	// TODO: write the code to implement this program

	public int run() {
		while(i==1) {
			checkMove();
			if(beepersPresent()) {
				return 0;
			}
		}

	}
	
	public void checkRight() {
		if(rightIsBlocked()) {
			turnLeft();
		}
	}
	
	public void moveIfPossible() {
		if(frontIsClear()) {
			move();
		}
	}
	
	public void checkMove() {
		checkRight();
		moveIfPossible();
	}
}
