 * TODO: comment this program
 */

import stanford.karel.*;

public class Sorter extends SuperKarel {
	int test = 1;
	public void run() {
		while (beepersPresent())
			move();
		turnAround();
		move();
		turnRight();
		pickupRow();
		putBeeper();
		while (test == 1) {//picks up all beepers
			turnRight();
			move();
			turnRight();
			pickupRow();
			turnRight();
			if (frontIsBlocked())
				test=0;
			turnLeft();
		}
		turnLeft();
		moveBeeper();//goes to the left behind beeper
		
		while (beepersInBag()) {
			turnLeft();
			move();
			putBeeper();
			turnAround();
			move();
			turnRight();
			while (beepersPresent()) {
				move();//moves to the end of the row
			}
			putBeeper();
			turnAround();
			move();
		}
		
	}
	
	public void pickupRow() {
		while (frontIsClear()) {
			if (beepersPresent())
				pickBeeper();
			move();
		}
		turnAround();
		moveWall();
	}
	
	public void moveWall() {
		while (frontIsClear())
			move();
	}
	
	public void moveBeeper() {
		while (noBeepersPresent())
			move();
	}
}