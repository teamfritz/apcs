import javax.swing.colorchooser.ColorSelectionModel;
import java.util.Random;
import stanford.karel.*;

public class randomizer extends SuperKarel {
	int runs = 500;
	Random rand = new Random();
	
	public void run() {
		/*for (int i = 0; i < runs; i++) {
			pickBeeper();
		}*/
		for (int i = 0; i < runs; i++) {
			if (random()) {
				turnLeft();
				if (random())
					turnAround();
			}
			colors();
			randMove(3);
		}
	}
	
	private void randMove(int times) {
		for (int i = 0; i < times; i++) {
			if (random()) {
				if (frontIsClear())
					move();
			}
		}
	}
	
	private void colors() {
		int color = (rand.nextInt(13));
		paintCorner(color);
	}
}