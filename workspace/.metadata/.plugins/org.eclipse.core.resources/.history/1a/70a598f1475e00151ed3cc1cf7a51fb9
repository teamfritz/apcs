package GUI;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Container;
import java.awt.Panel;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class gui1 {
	public static void main(String[] args){
		JFrame GUI = new JFrame();
		GUI.setTitle("Test GUI");
		GUI.setSize(1200, 700);
		GUI.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JPanel sidePanel = new JPanel();
		sidePanel.setBackground(Color.red);
		JPanel vertPanel = new JPanel();
		vertPanel.setBackground(Color.red);
		Container view = GUI.getContentPane();
		view.add(sidePanel, BorderLayout.WEST);
		view.add(sidePanel, BorderLayout.EAST);
		view.add(vertPanel, BorderLayout.NORTH);
		view.add(vertPanel, BorderLayout.south);
		GUI.setVisible(true);
	}

}
